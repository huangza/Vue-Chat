/* Location */
.m-center {
    margin: 0 auto;
}
.t-center {
    text-align: center;
}
.p-relative {
    position: relative;
}
.p-absolute {
    position: absolute;
}
.tips-open {
    opacity: 1;
    transition: initial;
}
.tips-close {
    opacity: 0;
    transform: scale(0);
    transition: opacity .2s ease, transform .4s ease
}
