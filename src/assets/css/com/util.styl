// border
.brd-top {
	position: relative;
	&:before {
		content: " ";
		position: absolute;
		left: 0;
		top: 0;
		right: 0;
		height: 1px;
		border-top: 1px solid #dfdfdd;
		color: #dfdfdd;
		trans-origin(0 0);
		trans-scaleY(0.5);
	}
}
.brd-bottom {
	position: relative;
	&:after {
		content: " ";
		position: absolute;
		left: 0;
		bottom: 0;
		right: 0;
		height: 1px;
		border-bottom: 1px solid #dfdfdd;
		color: #dfdfdd;
		trans-origin(0 100%);
		trans-scaleY(0.5);
	}
}
